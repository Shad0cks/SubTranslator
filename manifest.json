{
  "name": "Subtitle Translator.",
  "version": "0.1.0",
  "description": "Translate subtitles on Netflix",
  "manifest_version": 2,
  "background": {
    "scripts": ["src/bg.ts"],
    "persistent": false
  },
  "page_action": {
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [{
    "matches": ["*://*.netflix.com/*"],
    "js": ["src/content.ts"]
  }],
  "web_accessible_resources": [
    "src/index.ts",
    "src/index.css",
    "src/spinner.css"
  ],
  "permissions": [
    "https://www.netflix.com/*",
    "activeTab",
    "webNavigation",
    "declarativeContent",
    "storage"
  ]
}